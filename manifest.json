{
    "manifest_version":3,
    "name":"SnapNote",
    "version":"1.0",
    "description":"Highlight text manually and save it for later.",
    "permissions":["activeTab","storage","scripting","contextMenus"],
    "background":{
        "service_worker":"background.js"
    },
    "action":{
        "default_popup":"popup.html",
        "default_icon":{
            "16":"icon16.png",
            "48":"icon48.png",
            "128":"icon128.png"
        }
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}